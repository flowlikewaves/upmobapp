<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobappg4v2.Views.ManageProductsView"
             Title="Manage Products">
    <Grid RowDefinitions="Auto,*">
        <!-- Search and Filter Bar -->
        <Grid Grid.Row="0" Padding="20,10" ColumnDefinitions="*,Auto" ColumnSpacing="15">
            <SearchBar Grid.Column="0" 
                       Placeholder="Search products..."
                       Text="{Binding SearchQuery}"
                       SearchCommand="{Binding SearchCommand}"/>
            
            <Button Grid.Column="1" 
                    Text="Add New"
                    Command="{Binding AddNewProductCommand}"
                    BackgroundColor="#007AFF"/>
        </Grid>

        <!-- Products List -->
        <RefreshView Grid.Row="1" 
                     Command="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsRefreshing}">
            <CollectionView ItemsSource="{Binding Products}"
                          EmptyView="No products found">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Delete"
                                              BackgroundColor="Red"
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteProductCommand}"
                                              CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Frame Margin="20,10" 
                                   Padding="15"
                                   BorderColor="LightGray"
                                   CornerRadius="10">
                                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="15">
                                    <!-- Product Image -->
                                    <Frame Grid.Row="0" 
                                           Grid.RowSpan="3"
                                           Grid.Column="0"
                                           HeightRequest="80"
                                           WidthRequest="80"
                                           Padding="0"
                                           IsClippedToBounds="True">
                                        <Image Source="{Binding Images[0]}"
                                               Aspect="AspectFill"
                                               HeightRequest="80"
                                               WidthRequest="80"/>
                                    </Frame>

                                    <!-- Product Details -->
                                    <Label Grid.Row="0" 
                                           Grid.Column="1"
                                           Text="{Binding Name}"
                                           FontAttributes="Bold"
                                           FontSize="16"/>

                                    <Label Grid.Row="1" 
                                           Grid.Column="1"
                                           Text="{Binding SKU}"
                                           TextColor="Gray"
                                           FontSize="12"/>

                                    <StackLayout Grid.Row="2" 
                                               Grid.Column="1"
                                               Orientation="Horizontal"
                                               Spacing="15">
                                        <Label Text="{Binding StockQuantity, StringFormat='Stock: {0}'}"
                                               TextColor="Gray"/>
                                        <Label Text="|" TextColor="Gray"/>
                                        <Label Text="{Binding Price, StringFormat='${0:F2}'}"
                                               TextColor="#007AFF"/>
                                    </StackLayout>

                                    <!-- Edit Button -->
                                    <Button Grid.Row="1"
                                            Grid.Column="2"
                                            Text="Edit"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.EditProductCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#34C759"
                                            HeightRequest="35"
                                            Padding="15,0"/>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage> 