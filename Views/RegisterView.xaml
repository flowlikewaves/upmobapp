<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mobappg4v2.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Mobappg4v2.ViewModel"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#FFF8E7">

    <ContentPage.BindingContext>
        <vm:RegisterViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Grid RowDefinitions="Auto,*" Padding="24,0">
            <!-- Header Section -->
            <VerticalStackLayout Grid.Row="0" Spacing="8" Margin="0,48,0,0">
                <Image 
                    Source="mnmlogo.png" 
                    HeightRequest="150" 
                    Aspect="AspectFit"
                    HorizontalOptions="Center"
                    Margin="0,0,0,24"/>
                <Label 
                    Text="Sign Up"
                    FontFamily="Poppins"
                    FontSize="32"
                    TextColor="#8B4513"
                    HorizontalOptions="Center"/>
                <Label 
                    Text="Register to continue"
                    FontFamily="Poppins"
                    FontSize="16"
                    TextColor="#8B4513"
                    Opacity="0.8"
                    HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <!-- Form Section -->
            <VerticalStackLayout Grid.Row="1" Spacing="24" Margin="0,48,0,24">
                <!-- Email Field -->
                <VerticalStackLayout Spacing="8">
                    <Label 
                        Text="Email" 
                        FontFamily="OpenSansRegular"
                        TextColor="#8B4513"
                        FontSize="14"/>
                    <Frame 
                        Padding="16,0"
                        HeightRequest="50"
                        BorderColor="#DAB88B"
                        BackgroundColor="White"
                        CornerRadius="8"
                        HasShadow="False">
                        <Entry 
                            Text="{Binding Email}"
                            FontFamily="OpenSansRegular"
                            Placeholder="Enter your email"
                            PlaceholderColor="#8B451380"
                            TextColor="#8B4513"
                            VerticalOptions="Center"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Password Field -->
                <VerticalStackLayout Spacing="8">
                    <Label 
                        Text="Password" 
                        FontFamily="OpenSansRegular"
                        TextColor="#8B4513"
                        FontSize="14"/>
                    <Frame 
                        Padding="16,0"
                        HeightRequest="50"
                        BorderColor="#DAB88B"
                        BackgroundColor="White"
                        CornerRadius="8"
                        HasShadow="False">
                        <Entry 
                            Text="{Binding Password}"
                            FontFamily="OpenSansRegular"
                            Placeholder="Enter your password"
                            PlaceholderColor="#8B451380"
                            IsPassword="True"
                            TextColor="#8B4513"
                            VerticalOptions="Center"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Repeat Password Field -->
                <VerticalStackLayout Spacing="8">
                    <Label 
                        Text="Repeat Password" 
                        FontFamily="OpenSansRegular"
                        TextColor="#8B4513"
                        FontSize="14"/>
                    <Frame 
                        Padding="16,0"
                        HeightRequest="50"
                        BorderColor="#DAB88B"
                        BackgroundColor="White"
                        CornerRadius="8"
                        HasShadow="False">
                        <Entry 
                            Text="{Binding RepeatPassword}"
                            FontFamily="OpenSansRegular"
                            Placeholder="Repeat your password"
                            PlaceholderColor="#8B451380"
                            IsPassword="True"
                            TextColor="#8B4513"
                            VerticalOptions="Center"/>
                    </Frame>
                </VerticalStackLayout>

                <!-- Sign Up Button -->
                <Button 
                    Command="{Binding RegisterCommand}"
                    Text="SIGN UP"
                    FontFamily="Poppins"
                    FontSize="16"
                    TextColor="White"
                    BackgroundColor="#DAB88B"
                    CornerRadius="8"
                    HeightRequest="50"
                    Margin="0,24,0,0"/>

                <!-- Login Link -->
                <Button
                    Command="{Binding LoginCommand}"
                    Text="LOG IN"
                    FontFamily="Poppins"
                    FontSize="16"
                    TextColor="#8B4513"
                    BackgroundColor="#E8D1BD"
                    CornerRadius="8"
                    HeightRequest="50"/>
        </VerticalStackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
