<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mobappg4v2.Views.HomePageView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:Mobappg4v2.Converters"
    xmlns:vm="clr-namespace:Mobappg4v2.ViewModel"
    x:Name="HomePage"
    Title="Home Page"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#FFF8E7">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBooleanConverter x:Key="InverseBoolConverter" />
            <Style x:Key="SectionHeaderStyle" TargetType="Label">
                <Setter Property="FontFamily" Value="Poppins"/>
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="MinimumWidthRequest" Value="250"/>
                <Setter Property="MinimumHeightRequest" Value="60"/>
                <Setter Property="TextColor" Value="#8B4513"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="LineBreakMode" Value="TailTruncation"/>
                <Setter Property="Margin" Value="0,24,0,16"/>
                <Setter Property="HorizontalOptions" Value="Start"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>
            <Style x:Key="ViewAllStyle" TargetType="Label">
                <Setter Property="FontFamily" Value="Poppins"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="TextColor" Value="#DAB88B"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <Grid Margin="16,12" RowDefinitions="Auto,*">
        <StackLayout
            Grid.Row="0"
            Margin="0,0,0,16"
            HorizontalOptions="FillAndExpand"
            IsVisible="{Binding IsLoaded}"
            Orientation="Horizontal">
            <Border
                Margin="0"
                Padding="0"
                Background="White"
                HorizontalOptions="FillAndExpand"
                StrokeShape="RoundRectangle 22"
                Stroke="#DAB88B">
                <StackLayout
                    Margin="12,2"
                    Orientation="Horizontal"
                    VerticalOptions="CenterAndExpand">
                    <Label
                        FontFamily="MaterialIcon"
                        FontSize="20"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="&#xf349;"
                        TextColor="#8B4513"
                        VerticalOptions="CenterAndExpand" />
                    <Entry
                        Margin="8,0"
                        FontFamily="OpenSansRegular"
                        FontSize="14"
                        HorizontalOptions="FillAndExpand"
                        Placeholder="Search Here"
                        PlaceholderColor="#8B451380"
                        TextColor="#8B4513"/>
                </StackLayout>
            </Border>
        </StackLayout>
        <ScrollView Grid.Row="1" VerticalOptions="FillAndExpand">
            <StackLayout Spacing="0" VerticalOptions="Start">
                <Grid ColumnDefinitions="*,Auto" Margin="0,8">
                    <Label 
                        Text="Categories"
                        Style="{StaticResource SectionHeaderStyle}"
                        FontSize="28"/>
                </Grid>
                <CollectionView
                    Margin="0,6"
                    ItemsSource="{Binding Categories}"
                    SelectionMode="Single"
                    VerticalScrollBarVisibility="Never">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="12"
                            Orientation="Vertical"
                            Span="5"
                            VerticalItemSpacing="0" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame 
                                Style="{StaticResource CardFrameStyle}" 
                                Margin="0,4"
                                BackgroundColor="White"
                                BorderColor="#DAB88B"
                                HasShadow="False">
                                <StackLayout Spacing="4">
                                    <Label
                                        FontFamily="MaterialIcon"
                                        FontSize="24"
                                        HorizontalOptions="Center"
                                        Text="{Binding Icon}"
                                        TextColor="#8B4513"/>
                                    <Label
                                        FontFamily="OpenSansRegular"
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="{Binding CategoryName}"
                                        TextColor="#8B4513"/>
                                </StackLayout>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference HomePage}, Path=BindingContext.CategoryTapCommand}" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Grid ColumnDefinitions="*,Auto" Margin="0,8">
                    <Label 
                        Text="Best Selling"
                        Style="{StaticResource SectionHeaderStyle}"
                        FontSize="28"/>
                    <Label 
                        Grid.Column="1"
                        Text="View All"
                        Style="{StaticResource ViewAllStyle}"/>
                </Grid>
                <CollectionView 
                    Margin="0,12" 
                    ItemsSource="{Binding BestSellingProducts}"
                    HeightRequest="280">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="16" Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame 
                                Style="{StaticResource CardFrameStyle}" 
                                BackgroundColor="White"
                                BorderColor="#DAB88B"
                                HasShadow="False"
                                WidthRequest="200">
                                <StackLayout Spacing="8">
                                    <Image
                                        Aspect="AspectFit"
                                        HeightRequest="140"
                                        Source="{Binding ImageUrl}" />
                                    <Label
                                        FontFamily="Poppins"
                                        FontSize="16"
                                        Text="{Binding Name}"
                                        TextColor="#8B4513"/>
                                    <Label
                                        FontFamily="OpenSansRegular"
                                        FontSize="14"
                                        Text="{Binding BrandName}"
                                        TextColor="#8B451380"/>
                                    <Label
                                        FontFamily="Poppins"
                                        FontSize="18"
                                        Text="{Binding Price, StringFormat='${0:F2}'}"
                                        TextColor="#DAB88B"/>
                                </StackLayout>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference HomePage}, Path=BindingContext.SelectProductCommand}" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Grid ColumnDefinitions="*,Auto" Margin="0,8">
                    <Label 
                        Text="Featured Brands"
                        Style="{StaticResource SectionHeaderStyle}"
                        FontSize="28"/>
                    <Label 
                        Grid.Column="1"
                        Text="View All"
                        Style="{StaticResource ViewAllStyle}"/>
                </Grid>
                <CollectionView 
                    Margin="0,12" 
                    ItemsSource="{Binding FeaturedBrands}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="16" Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame 
                                Padding="16,12"
                                BackgroundColor="White"
                                BorderColor="#DAB88B"
                                CornerRadius="8"
                                HasShadow="False">
                                <StackLayout Orientation="Horizontal" Spacing="12">
                                    <Image
                                        Aspect="AspectFit"
                                        HeightRequest="40"
                                        WidthRequest="40"
                                        Source="{Binding ImageUrl}"/>
                                    <StackLayout Spacing="4">
                                        <Label
                                            FontFamily="Poppins"
                                            FontSize="16"
                                            Text="{Binding BrandName}"
                                            TextColor="#8B4513"/>
                                        <Label
                                            FontFamily="OpenSansRegular"
                                            FontSize="14"
                                            Text="{Binding ProductCount, StringFormat='{0} Products'}"
                                            TextColor="#8B451380"/>
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Grid ColumnDefinitions="*,Auto" Margin="0,8">
                    <Label 
                        Text="Best Selling"
                        Style="{StaticResource SectionHeaderStyle}"
                        FontSize="28"/>
                    <Label 
                        Grid.Column="1"
                        Text="View All"
                        Style="{StaticResource ViewAllStyle}"/>
                </Grid>
                <CollectionView 
                    Margin="0,12" 
                    ItemsSource="{Binding BestSellingProducts}"
                    HeightRequest="280">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="16" Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame 
                                Style="{StaticResource CardFrameStyle}" 
                                BackgroundColor="White"
                                BorderColor="#DAB88B"
                                HasShadow="False"
                                WidthRequest="200">
                                <StackLayout Spacing="8">
                                    <Image
                                        Aspect="AspectFit"
                                        HeightRequest="140"
                                        Source="{Binding ImageUrl}" />
                                    <Label
                                        FontFamily="Poppins"
                                        FontSize="16"
                                        Text="{Binding Name}"
                                        TextColor="#8B4513"/>
                                    <Label
                                        FontFamily="OpenSansRegular"
                                        FontSize="14"
                                        Text="{Binding BrandName}"
                                        TextColor="#8B451380"/>
                                    <Label
                                        FontFamily="Poppins"
                                        FontSize="18"
                                        Text="{Binding Price, StringFormat='${0:F2}'}"
                                        TextColor="#DAB88B"/>
                                </StackLayout>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference HomePage}, Path=BindingContext.SelectProductCommand}" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>