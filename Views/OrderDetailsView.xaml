<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Mobappg4v2.Views.OrderDetailsView"
    Title="Order Details">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Order Header -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15">
                <Grid RowDefinitions="Auto,Auto" RowSpacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="{Binding Order.OrderId}"
                               FontSize="20"
                               FontAttributes="Bold"/>
                        <Label Grid.Column="1"
                               Text="{Binding Order.OrderDate, StringFormat='{0:MMM dd, yyyy HH:mm}'}"
                               TextColor="Gray"/>
                    </Grid>
                    <Frame Grid.Row="1"
                           Padding="8,4"
                           BackgroundColor="{Binding Order.Status, Converter={StaticResource StatusToColorConverter}}"
                           HorizontalOptions="Start"
                           CornerRadius="5">
                        <Label Text="{Binding Order.Status}"
                               TextColor="White"
                               FontSize="12"/>
                    </Frame>
                </Grid>
            </Frame>

            <!-- Customer Information -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Customer Information"
                           FontSize="18"
                           FontAttributes="Bold"/>
                    
                    <Grid RowDefinitions="Auto,Auto" RowSpacing="10">
                        <VerticalStackLayout Grid.Row="0" Spacing="5">
                            <Label Text="Name" FontAttributes="Bold"/>
                            <Label Text="{Binding Order.CustomerName}"/>
                        </VerticalStackLayout>
                        
                        <VerticalStackLayout Grid.Row="1" Spacing="5">
                            <Label Text="Shipping Address" FontAttributes="Bold"/>
                            <Label Text="{Binding Order.ShippingAddress}"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Payment Information -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Payment Information"
                           FontSize="18"
                           FontAttributes="Bold"/>
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" 
                          ColumnSpacing="15" RowSpacing="15">
                        <VerticalStackLayout Grid.Column="0" Grid.Row="0" Spacing="5">
                            <Label Text="Payment Method" FontAttributes="Bold"/>
                            <Label Text="{Binding Order.PaymentMethod}"/>
                        </VerticalStackLayout>
                        
                        <VerticalStackLayout Grid.Column="1" Grid.Row="0" Spacing="5">
                            <Label Text="Payment Status" FontAttributes="Bold"/>
                            <Label Text="{Binding Order.PaymentStatus}"/>
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="0" Grid.Row="1" Spacing="5">
                            <Label Text="Total Amount" FontAttributes="Bold"/>
                            <Label Text="{Binding Order.TotalAmount, StringFormat='${0:F2}'}"
                                   TextColor="#007AFF"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Shipping Information -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Shipping Information"
                           FontSize="18"
                           FontAttributes="Bold"/>
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" 
                          ColumnSpacing="15" RowSpacing="15">
                        <VerticalStackLayout Grid.Column="0" Grid.Row="0" 
                                           Grid.ColumnSpan="2" Spacing="5">
                            <Label Text="Tracking Number" FontAttributes="Bold"/>
                            <Label Text="{Binding Order.TrackingNumber}"/>
                        </VerticalStackLayout>
                        
                        <VerticalStackLayout Grid.Column="0" Grid.Row="1" Spacing="5">
                            <Label Text="Shipped Date" FontAttributes="Bold"/>
                            <Label Text="{Binding Order.ShippedDate, StringFormat='{0:MMM dd, yyyy}'}"/>
                        </VerticalStackLayout>
                        
                        <VerticalStackLayout Grid.Column="1" Grid.Row="1" Spacing="5">
                            <Label Text="Delivered Date" FontAttributes="Bold"/>
                            <Label Text="{Binding Order.DeliveredDate, StringFormat='{0:MMM dd, yyyy}'}"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Order Items -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Order Items"
                           FontSize="18"
                           FontAttributes="Bold"/>
                    
                    <CollectionView ItemsSource="{Binding Order.Items}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                                <Grid Padding="0,10" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                    <!-- Product Image -->
                                    <Frame Grid.Column="0"
                                           HeightRequest="60"
                                           WidthRequest="60"
                                            Padding="0"
                                            IsClippedToBounds="True">
                                        <Image Source="{Binding ProductImage}"
                                               Aspect="AspectFill"/>
                                        </Frame>

                                    <!-- Product Details -->
                                    <VerticalStackLayout Grid.Column="1" Spacing="5">
                                        <Label Text="{Binding ProductName}"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding SKU}"
                                               TextColor="Gray"
                                               FontSize="12"/>
                                        <Label Text="{Binding UnitPrice, StringFormat='${0:F2}'}"
                                               TextColor="#007AFF"/>
                                    </VerticalStackLayout>

                                    <!-- Quantity and Subtotal -->
                                    <VerticalStackLayout Grid.Column="2" 
                                                       HorizontalOptions="End"
                                                       Spacing="5">
                                        <Label Text="{Binding Quantity, StringFormat='Qty: {0}'}"
                                               HorizontalOptions="End"/>
                                        <Label Text="{Binding Subtotal, StringFormat='${0:F2}'}"
                                               FontAttributes="Bold"
                                               HorizontalOptions="End"/>
                                    </VerticalStackLayout>
                                    </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Notes -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15"
                   IsVisible="{Binding HasNotes}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Notes"
                           FontSize="18"
                           FontAttributes="Bold"/>
                    <Label Text="{Binding Order.Notes}"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="15">
                <Button Grid.Column="0"
                        Text="Update Status"
                        Command="{Binding UpdateStatusCommand}"
                        BackgroundColor="#34C759"/>
                <Button Grid.Column="1"
                        Text="Add Note"
                        Command="{Binding AddNoteCommand}"
                        BackgroundColor="#007AFF"/>
    </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>