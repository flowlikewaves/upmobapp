<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mobappg4v2.Views.SellerOrdersView"
             Title="Orders">
    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Placeholder="Search orders..."
                   Text="{Binding SearchQuery}"
                   SearchCommand="{Binding SearchCommand}"
                   Margin="20,10"/>

        <!-- Filter Options -->
        <ScrollView Grid.Row="1" 
                   Orientation="Horizontal"
                   Margin="20,0,20,10">
            <HorizontalStackLayout Spacing="10">
                <Button Text="All"
                        Command="{Binding FilterCommand}"
                        CommandParameter="All"
                        BackgroundColor="{Binding AllFilterColor}"/>
                <Button Text="Pending"
                        Command="{Binding FilterCommand}"
                        CommandParameter="Pending"
                        BackgroundColor="{Binding PendingFilterColor}"/>
                <Button Text="Processing"
                        Command="{Binding FilterCommand}"
                        CommandParameter="Processing"
                        BackgroundColor="{Binding ProcessingFilterColor}"/>
                <Button Text="Shipped"
                        Command="{Binding FilterCommand}"
                        CommandParameter="Shipped"
                        BackgroundColor="{Binding ShippedFilterColor}"/>
                <Button Text="Delivered"
                        Command="{Binding FilterCommand}"
                        CommandParameter="Delivered"
                        BackgroundColor="{Binding DeliveredFilterColor}"/>
                <Button Text="Cancelled"
                        Command="{Binding FilterCommand}"
                        CommandParameter="Cancelled"
                        BackgroundColor="{Binding CancelledFilterColor}"/>
            </HorizontalStackLayout>
        </ScrollView>

        <!-- Orders List -->
        <RefreshView Grid.Row="2"
                     Command="{Binding RefreshCommand}"
                     IsRefreshing="{Binding IsRefreshing}">
            <CollectionView ItemsSource="{Binding Orders}"
                          EmptyView="No orders found">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="20,10" 
                               Padding="15"
                               BorderColor="LightGray"
                               CornerRadius="10">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                                  RowSpacing="10">
                                <!-- Order Header -->
                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                    <Label Text="{Binding OrderId}"
                                           FontAttributes="Bold"
                                           FontSize="16"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding OrderDate, StringFormat='{0:MMM dd, yyyy}'}"
                                           TextColor="Gray"/>
                                </Grid>

                                <!-- Customer Info -->
                                <StackLayout Grid.Row="1" 
                                           Orientation="Horizontal"
                                           Spacing="10">
                                    <Label Text="{Binding CustomerName}"
                                           TextColor="Gray"/>
                                    <Label Text="|" 
                                           TextColor="Gray"/>
                                    <Label Text="{Binding TotalAmount, StringFormat='${0:F2}'}"
                                           TextColor="#007AFF"
                                           FontAttributes="Bold"/>
                                </StackLayout>

                                <!-- Status -->
                                <Grid Grid.Row="2" ColumnDefinitions="Auto,*,Auto">
                                    <Frame Padding="8,4"
                                           BackgroundColor="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                           CornerRadius="5">
                                        <Label Text="{Binding Status}"
                                               TextColor="White"
                                               FontSize="12"/>
                                    </Frame>
                                    <Label Grid.Column="1"
                                           Text="{Binding PaymentStatus}"
                                           TextColor="Gray"
                                           HorizontalOptions="End"
                                           Margin="0,0,10,0"/>
                                    <Label Grid.Column="2"
                                           Text="{Binding PaymentMethod}"
                                           TextColor="Gray"/>
                                </Grid>

                                <!-- Action Buttons -->
                                <HorizontalStackLayout Grid.Row="3" 
                                                     Spacing="10"
                                                     HorizontalOptions="End">
                                    <Button Text="View Details"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewOrderCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#007AFF"
                                            HeightRequest="35"
                                            Padding="15,0"/>
                                    <Button Text="Update Status"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.UpdateStatusCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#34C759"
                                            HeightRequest="35"
                                            Padding="15,0"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage> 